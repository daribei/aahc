{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vmName": {
            "type": "string",
            "defaultValue": "dc1w2azvm",
            "metadata": {
                "description": "The name of Primary Domain Controller of this PoC."
            }
        },
        "configZipFileUrl": {
            "type": "string",
            "defaultValue": "https://github.com/rodrigosantosms/aahc/raw/master/PoC/1_MainTrack/5_compute/1_dc1/configdc1-modules-scripts.zip",
            "metadata": {
                "description": "The URL of configdc1-modules-scripts.zip"
            }
        },
        "configScriptFileName": {
            "type": "string",
            "defaultValue": "configdc1.ps1"
        },
        "configFunctionName": {
            "type": "string",
            "defaultValue": "configdc1"
        },
        "domainName": {
            "defaultValue": "contosoad.com",
            "type": "string"
          },
        "AdminUsername": {
            "type": "string",
            "defaultValue": "localadmin"
        },
        "AdminPassword": {
            "type": "securestring",
            "defaultValue": "",
            "metadata": {
                "description": "The password for localadmin."
            }
        },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "The location in which the Azure Storage resources should be deployed."
            }
        }
    },
    "resources": [
        {
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "name": "[concat(parameters('vmName'),'/Microsoft.Powershell.DSC')]",
            "apiVersion": "2018-10-01",
            "location": "[parameters('location')]",
            "properties": {
                "publisher": "Microsoft.Powershell",
                "type": "DSC",
                "typeHandlerVersion": "2.77",
                "autoUpgradeMinorVersion": true,
                "settings": {
                    "wmfVersion": "latest",
                    "configuration": {
                        "url": "[parameters('configZipFileUrl')]",
                        "script": "[parameters('configScriptFileName')]",
                        "function": "[parameters('configFunctionName')]"
                    },
                    "configurationArguments": {
                        "DomainName": "[parameters('domainName')]",
                        "DataDiskNumber": 2,
                        "DataDriveLetter": "F",
                        "AdminCredentials": {
                            "userName": "[parameters('AdminUsername')]",
                            "password": "PrivateSettingsRef:AdminPassword"
                          }
                    },
                    "configurationData": {
                    },
                    "privacy": {
                        "dataCollection": "Enable"
                    }
                },
                "protectedSettings": {
                    "configurationArguments": {
                        "AdminPassword": "[parameters('AdminPassword')]"
                    }
                }
            }
        }
    ]
}
