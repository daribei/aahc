{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "AdminUsername": {
            "type": "string",
            "defaultValue": "localadmin"
        },
        "AdminPassword": {
            "type": "securestring",
            "defaultValue": "",
            "metadata": {
                "description": "The password for localadmin."
            }
        },
        "vmName": {
            "defaultValue": "jumpbox",
            "type": "string",
            "maxLength": 15,
            "metadata": {
                "description": "Name of the virtual machine to be created"
            }
        },
        "virtualMachineCount": {
            "type": "int",
            "defaultValue": 12,
            "metadata": {
                "description": "Number of  virtual machines to be created"
            }
        },
        "vmSize": {
            "type": "string",
            "defaultValue": "Standard_DS3_v2",
            "metadata": {
                "description": "Virtual Machine Size"
            }
        },
        "dnsPrefixForPublicIP": {
            "type": "string",
            "minLength": 1,
            "maxLength": 14,
            "defaultValue": "[uniqueString(resourceGroup().id)]",
            "metadata": {
                "description": "Globally unique DNS prefix for the Public IPs used to access the Virtual Machines"
            }
        },
        "existingVnetName": {
            "type": "string",
            "defaultValue": "EMULATED-ONPREM-NETWORK",
            "metadata": {
                "description": "Name of the existing virtual network to deploy the VM"
            }
        },
        "existingSubnetName": {
            "type": "string",
            "defaultValue": "Jumpbox-sn",
            "metadata": {
                "description": "Name of the existing subnet to deploy the VM"
            }
        }
    },
    "variables": {
        "location": "[resourceGroup().location]",
        "osType": {
            "publisher": "MicrosoftVisualStudio",
            "offer": "VisualStudio",
            "sku": "VS-2017-Comm-Latest-Win10-N",
            "version": "latest"
        },
        "imageReference": "[variables('osType')]",
        "diagnosticStorageAccountName": "[concat('diagst', uniqueString(resourceGroup().id))]"
    },
    "resources": [
        {
            "apiVersion": "2016-03-30",
            "type": "Microsoft.Network/publicIPAddresses",
            "name": "[concat(parameters('vmName'), copyIndex(1), '-pip1')]",
            "location": "[variables('location')]",
            "copy": {
                "name": "pipCopy",
                "count": "[parameters('virtualMachineCount')]"
            },
            "tags": {
                "displayName": "[concat(parameters('vmName'), copyIndex(1), '-pip1')]"
            },
            "properties": {
                "publicIPAllocationMethod": "Static",
                "dnsSettings": {
                    "domainNameLabel": "[concat(parameters('dnsPrefixForPublicIP'), copyIndex(1))]"
                }
            }
        },
        {
            "type": "Microsoft.Network/networkInterfaces",
            "name": "[concat(parameters('vmName'), copyIndex(1), '-nic1')]",
            "apiVersion": "2018-02-01",
            "location": "[variables('location')]",
            "copy": {
                "name": "nicCopy",
                "count": "[parameters('virtualMachineCount')]"
            },
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "publicIPAddress": {
                                "id": "[resourceId('Microsoft.Network/publicIPAddresses', concat(parameters('vmName'), copyIndex(1), '-pip1'))]"
                            },
                            "subnet": {
                                "id": "[resourceId(resourceGroup().name, 'Microsoft.Network/virtualNetworks/subnets', parameters('existingVnetName'), parameters('existingSubNetName'))]"
                            }
                        }
                    }
                ],
                "dnsSettings": {
                    "dnsServers": []
                },
                "enableIPForwarding": false
            },
            "dependsOn": [
                "[resourceId('Microsoft.Network/publicIPAddresses', concat(parameters('vmName'), copyIndex(1), '-pip1'))]"
            ]
        },
        {
            "name": "[variables('diagnosticStorageAccountName')]",
            "type": "Microsoft.Storage/storageAccounts",
            "location": "[variables('location')]",
            "apiVersion": "2016-01-01",
            "sku": {
                "name": "Standard_LRS"
            },
            "dependsOn": [],
            "tags": {
                "displayName": "diagnosticStorageAccount"
            },
            "kind": "Storage"
        },
        {
            "type": "Microsoft.Compute/virtualMachines",
            "name": "[concat(parameters('vmName'), copyIndex(1))]",
            "apiVersion": "2018-06-01",
            "location": "[variables('location')]",
            "copy": {
                "name": "VMcopy",
                "count": "[parameters('virtualMachineCount')]"
            },
            "properties": {
                "hardwareProfile": {
                    "vmSize": "[parameters('vmSize')]"
                },
                "storageProfile": {
                    "imageReference": "[variables('imageReference')]",
                    "osDisk": {
                        "name": "[concat(parameters('vmName'),copyIndex(1))]",
                        "createOption": "FromImage",
                        "managedDisk": {
                            "storageAccountType": "Premium_LRS"
                        },
                        "caching": "ReadWrite"
                    }
                },
                "osProfile": {
                    "computerName": "[concat(parameters('vmName'),copyIndex(1))]",
                    "adminUsername": "[parameters('adminUsername')]",
                    "adminPassword": "[parameters('adminPassword')]",
                    "windowsConfiguration": {
                        "provisionVMAgent": true,
                        "enableAutomaticUpdates": true
                    },
                    "secrets": [],
                    "allowExtensionOperations": true
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', concat(parameters('vmName'), copyIndex(1), '-nic1'))]"
                        }
                    ]
                },
                "diagnosticsProfile": {
                    "bootDiagnostics": {
                        "enabled": true,
                        "storageUri": "[reference(resourceId('Microsoft.Storage/storageAccounts', variables('diagnosticStorageAccountName')), '2016-01-01').primaryEndpoints.blob]"
                    }
                }
            },
            "dependsOn": [
                "[concat('Microsoft.Storage/storageAccounts/', variables('diagnosticStorageAccountName'))]",
                "[resourceId('Microsoft.Network/networkInterfaces', concat(parameters('vmName'), copyIndex(1), '-nic1'))]"
            ]
        }
    ],
    "outputs": {}
}